<div class="col-md-6">
    <h1 id="burger-list">Free to edit Burger Menu</h1>
	<h2>Anyone can create a burger!</h2>
    <ul class="burger-menu">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers devoured = true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-md-6">
    <h1 id="burger-list">Burgers In our customers stomachs</h1>
    <ul class="burger-menu">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers devoured = false}}
        {{/if}}
        {{/each}}
    </ul>
</div>